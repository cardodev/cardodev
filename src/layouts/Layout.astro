---
import Header from "../components/Header.astro";
import ContactInfoAside from "../components/ContactInfoAside.vue";
import SocialMediaAside from "../components/SocialMediaAside.vue";
import "../styles/main.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <SocialMediaAside client:load />
    <ContactInfoAside client:load />
    <Header />
    <main class="main-content">
      <div class="mx-auto max-w-7xl">
        <slot />
      </div>
    </main>
    <footer class="my-10">
      <div
        class="max-w-screen-xl mx-auto border-t border-t-1 border-t-gray-300"
      >
      </div>
      <div class="py-12 text-center">
        <span class="text-center text-gray-300"
          >Built and Design by @Diego.</span
        >
      </div>
    </footer>
  </body>
</html>
