---
import { Icon } from "astro-icon";
const { project } = Astro.props;

console.log({ project }, "detail");
---

<main class="mx-auto max-w-7xl">
  <div class="relative grid grid-cols-3 gap-10">
    <div class="col-span-2 flex flex-col gap-8">
      {
        project.images.map((image: any) => (
          <img src={image.src} alt={image.alt} />
        ))
      }
    </div>
    <div class="project-detail">
      <h1 class="my-5 text-4xl font-semibold text-left text-white">
        Ambar.pet
      </h1>
      <p class="my-4 text-md text-left">
        {project.description}
      </p>
      <a
        class="py-2 px-4 rounded-full cursor-pointer"
        style="background-color: #262626;"
        href="">About Ambar.pet</a
      >

      <div class="grid grid-cols-2 gap-x-2 gap-y-2 mt-5">
        {
          project.technologies &&
            project.technologies.map((technology: any) => (
              <div class="card-base rounded-lg flex items-center space-x-4">
                <div class="rounded-lg flex">
                  <Icon name={technology.icon} width="20" height="20" />
                </div>
                <span class="flex-1 truncate text-sm">{technology.label}</span>
              </div>
            ))
        }
      </div>

      <!-- {
        project.technologies &&

             <div class="grid grid-cols-2 gap-x-2 gap-y-2 mt-5">
             {}
            </div>
          // project.technologies.map((technology: any) => (
          //   <div class="grid grid-cols-2 gap-x-2 gap-y-2 mt-5">
          //     <div class="card-base rounded-lg flex items-center space-x-4">
          //       <div class="rounded-lg flex">
          //         <Icon name={technology.icon} width="20" height="20" />
          //       </div>
          //       <span class="flex-1 truncate text-sm">{technology.label}</span>
          //     </div>
          //   </div>
          // ))
      } -->

      <div class="grid grid-cols-2 gap-10 mt-8">
        {
          project.release_date && (
            <div class="flex flex-col">
              <span class="font-medium" style="color: #a9a9a9">
                Release date
              </span>
              <span class="text-white">{project.release_date}</span>
            </div>
          )
        }
        {
          project.team && project.team.length > 0 && (
            <div class="flex flex-col">
              <span class="font-medium" style="color: #a9a9a9">
                Team
              </span>
              {project.team.map((teamMember: any) => {
                <span class="text-white">{teamMember.name}</span>;
              })}
            </div>
          )
        }
      </div>
    </div>
  </div>

  <style>
    .project-grid-item {
      cursor: pointer;
      /* background-image: url("@/assets/img/projects/example.png"); */
    }
    .project-detail {
      position: sticky;
      top: 0;
      height: 100vh;
    }
  </style>
</main>
