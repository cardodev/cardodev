---
import { Icon } from "astro-icon";
---

<section>
  <h3
    class="text-sm text-black/70 dark:text-white/50 my-3 font-medium uppercase"
  >
    Experience
  </h3>
  <div
    class="rounded-lg card-base bg-gray-900 overflow-x-hidden transition-colors p-4 cursor-pointer"
  >
    <ol class="mt-6 space-y-4">
      <li class="flex gap-4">
        <div
          class="relative flex items-center justify-center flex-none w-10 h-10 mt-1 rounded-full shadow-md shadow-zinc-800/5 ring-1 ring-zinc-900/5 dark:border dark:border-zinc-700/50 dark:bg-zinc-800 dark:ring-0"
        >
          <img
            src="https://media.licdn.com/dms/image/C4D0BAQG0vUVkYGqZvA/company-logo_200_200/0/1605289583288?e=2147483647&v=beta&t=QO7OzDBN7KGnBAOglqVvKLpBXT0gGONlg9fNwN2EZwI"
          />
        </div>
        <div class="flex flex-wrap flex-auto gap-x-2">
          <h5
            class="flex-none w-full text-sm font-medium text-neutral-900 dark:text-white"
          >
            Apside
          </h5>
          <h6 class="text-xs text-neutral-700 dark:text-zinc-300">
            Full stack Engineer
          </h6>
          <div class="ml-auto text-xs text-neutral-700 dark:text-zinc-300">
            <time datetime="2021">2021</time>
            <span>-</span>
            <time datetime="2023">Presente</time>
          </div>
        </div>
      </li>

      <li class="flex gap-4">
        <div
          class="relative flex items-center justify-center flex-none w-10 h-10 mt-1 rounded-full shadow-md shadow-zinc-800/5 ring-1 ring-zinc-900/5 dark:border dark:border-zinc-700/50 dark:bg-zinc-800 dark:ring-0"
        >
          <img
            src="https://getonbrd-prod.s3.amazonaws.com/uploads/users/logo/10555/icon-pckz-web-1__2_.gif"
          />
        </div>
        <div class="flex flex-wrap flex-auto gap-x-2">
          <h5
            class="flex-none w-full text-sm font-medium text-neutral-900 dark:text-white"
          >
            Pckz
          </h5>
          <h6 class="text-xs text-neutral-700 dark:text-zinc-300">
            Full stack Engineer
          </h6>
          <div class="ml-auto text-xs text-neutral-700 dark:text-zinc-300">
            <time datetime="2021">2021</time>
            <span>-</span>
            <time datetime="2023">Presente</time>
          </div>
        </div>
      </li>
    </ol>

    <div class="flex items-center justify-start mt-8 gap-3">
      <a
        href="/resume.pdf"
        target="_blank"
        class="cursor-pointer text-xs text-white font-semibold px-4 py-1 rounded-lg bg-zinc-800 flex items-center"
      >
        <Icon name="system-uicons:file-download" width="24px" class="mr-1" />
        Read.cv
      </a>
      <button
        class="cursor-pointer text-xs text-white font-semibold px-4 py-1 rounded-lg bg-zinc-800 flex items-center"
      >
        <Icon name="ic:round-work-outline" width="24px" class="mr-1" />
        Descargar cv
      </button>
    </div>
  </div>
</section>
